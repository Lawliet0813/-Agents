# ====================================
# 政大學生專用環境變數範例
# NCCU Student Environment Variables
# ====================================

# 複製此文件為 .env 並填入實際值
# Copy this file to .env and fill in actual values

# ====================================
# 資料庫 Database
# ====================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/graduate_assistant?schema=public"

# ====================================
# NextAuth 身份驗證
# ====================================
NEXTAUTH_SECRET="your-nextauth-secret-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# ====================================
# Google OAuth
# 從 Google Cloud Console 取得
# Get from Google Cloud Console
# ====================================

# 政大信箱登入使用
# For NCCU email login (114921039@nccu.edu.tw)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# 政大信箱（用於腳本）
# NCCU email (for scripts)
NCCU_EMAIL="114921039@nccu.edu.tw"

# ====================================
# AI 服務 AI Services
# ====================================

# OpenAI (用於 Whisper 語音轉文字)
# Used for Whisper speech-to-text
OPENAI_API_KEY=""

# Anthropic (用於 Claude AI 筆記生成)
# Used for Claude AI note generation
ANTHROPIC_API_KEY=""

# ====================================
# Notion 整合 (可選)
# Notion Integration (Optional)
# ====================================
NOTION_API_KEY=""

# ====================================
# iCloud Voice Watcher (Mac mini)
# ====================================

# 使用者 ID (首次登入後從資料庫取得)
# User ID (get from database after first login)
DEFAULT_USER_ID=""

# iCloud Voice Memos 路徑
# iCloud Voice Memos path
VOICE_MEMOS_PATH="~/Library/Mobile Documents/com~apple~VoiceMemos/Documents/"

# 自動處理設定
# Auto-process settings
AUTO_PROCESS="true"

# ====================================
# 政大 Moodle (可選)
# NCCU Moodle (Optional)
# ====================================

# 政大 Moodle 網址
MOODLE_URL="https://moodle.nccu.edu.tw"

# Moodle Web Service Token (需要管理員協助取得)
# Moodle Web Service Token (need admin help to get)
MOODLE_TOKEN=""

# ====================================
# Python 服務 (如果使用)
# Python Service (if using)
# ====================================
PYTHON_SERVICE_URL="http://localhost:8000"

# ====================================
# 部署設定 (生產環境)
# Deployment Settings (Production)
# ====================================

# 生產環境網址
# Production URL
# NEXTAUTH_URL="https://your-domain.com"

# 生產環境資料庫
# Production database
# DATABASE_URL="postgresql://user:password@host:5432/database"

